<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="{Binding Exercice.Nom}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Workout.Views.AddExercicesPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="add" Command="{Binding AddMuscleCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView SelectedItem="{Binding SelectedMuscle, Mode=TwoWay}" ItemsSource="{Binding Muscles}" ItemSelected="OnMuscleSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nom}" TextColor="{Binding color}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Command="{Binding SaveCommand}" Text="Save" BackgroundColor="#777777" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>