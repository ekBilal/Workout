<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="Exercices"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Workout.Views.ExercicesPage">
    <ContentPage.Content>
        <ListView SelectedItem="{Binding SelectedExercice, Mode=TwoWay}" ItemsSource="{Binding Exercices}" ItemSelected="OnExerciceSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nom}" Detail="{Binding Cible.Nom}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>